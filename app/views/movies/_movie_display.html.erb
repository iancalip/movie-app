<div class="movies-container">
  <% movies.each do |movie|%>
    <div class="movie-container">
      <%= image_tag movie.image, class: "movie-image" %>
      <div class="movie-details">
        <h4><%= link_to movie.title, movie_path(movie) %></h4>
        <p><%=  movie.release_year%></p>
      </div>
    </div>
  <% end %>
</div>